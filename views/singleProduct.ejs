<body>
 <%- include('header.ejs') %>
 <form class="row" action="/ShoppingCart/Add" method="post">
 <div class="center-content">
    

    <div class="card">
        <h2><%= product.Name %></h2>
        <img src="<%= product.Link %>" alt="Product Image" id="ProductPhoto">
        <div class="card-body">
            <p>Price: <%= product.Price %></p>
            <p class="card-text">Description: <%= product.Description %></p>
            <button class="btn btn-primary" type="submit" name="cartAction"value="<%= product.Name %>">Add to Cart List</button>
        <button class="btn btn-primary" type="submit" name="wishlistAction" value="<%= product.Name %>">Add to Wish List</button>
        </div>
    </div>
</form>


