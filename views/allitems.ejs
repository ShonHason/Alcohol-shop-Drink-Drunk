<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Drink&Drink</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body>
    <%- include('header.ejs') %>

    <%- include('sorter.ejs') %>

    <div class="container">
        <div class="row">
            <form class="row" action="/AllItems/Add" method="post">
                <div class="row">
                    <% products.forEach(function(product) { %>
                        <div class="col-md-4 mb-4">
                            
                            <div class="card h-100">
                                <% if (product.Catergory === 'WHITE' || product.Catergory === 'RED' || product.Catergory === 'ROSE') { %>
                                    <a href="/WINE/<%= encodeURIComponent(product.Catergory) %>/<%= encodeURIComponent(product.Name) %>">
                                <% } else if (product.Catergory === "Israel's beers" || product.Catergory === 'Worldwide beers') { %>
                                    <a href="/Beers/<%= encodeURIComponent(product.Catergory) %>/<%= encodeURIComponent(product.Name) %>">
                                <% } else { %>
                                    <a href="/<%= encodeURIComponent(product.Catergory) %>/<%= encodeURIComponent(product.Name) %>">
                                <% } %>
                                    <img src="<%= product.Link %>" alt="Product Image" class="card-img-top">
                                </a>

                                <div class="card-body">
                                    <h5 class="card-title"><%= product.Name %></h5>
                                    <p class="card-text">Price: <%= product.Price %></p>
                                </div>
                                
  
                                <div class="card-footer d-flex justify-content-between">
                                    <button class="btn btn-primary" type="submit" name="cartAction" value="<%= product.Name %>">Add to Cart List</button>
                                    <button class="btn btn-primary" type="submit" name="wishlistAction" value="<%= product.Name %>">Add to Wish List</button>

                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </form>
        </div>
    </div>

    <%- include('footer.ejs') %>
</body>
</html>
